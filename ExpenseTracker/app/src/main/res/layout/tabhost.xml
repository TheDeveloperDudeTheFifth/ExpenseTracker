<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/Home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f8f8ff"
                    android:orientation="vertical"

                    >

                    <include
                        layout="@layout/activity_home__screen"
                        android:id="@+id/news_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/Stats"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f8f8ff"
                    android:orientation="vertical">

                    <include
                        layout="@layout/activity_stats"
                        android:id="@+id/news_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f8f8ff"
                    android:orientation="vertical">

                    <include
                        layout="@layout/activity_maps_overview"
                        android:id="@+id/news_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f8f8ff"
                    android:orientation="vertical">

                    <include
                        layout="@layout/activity_screen_settings"
                        android:id="@+id/news_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f8f8ff"
                    android:orientation="vertical">

                    <include
                        layout="@layout/activity_add"
                        android:id="@+id/news_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
            </FrameLayout>
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" ></TabWidget>
        </RelativeLayout>
    </TabHost>
</LinearLayout>